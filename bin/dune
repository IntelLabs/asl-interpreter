(executable
 (name asli)
 (public_name asli)
 (modes exe)
 (modules asli sites)
 (flags
  (-cclib -lstdc++))
 (libraries libASL linenoise dune-site dune-site.plugins))

(generate_sites_module
  (module sites)
  (sites asli)
  (plugins (asli plugins)))

